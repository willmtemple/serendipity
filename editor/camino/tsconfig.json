{
  "compilerOptions": {
    "baseUrl": "src",

    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,

    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "noEmit": true,

    "jsx": "react",

    "importHelpers": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "build",
    "public",
    "acceptance-tests",
    "webpack",
    "jest"
  ],
  "include": [
    "src"
  ]
}
