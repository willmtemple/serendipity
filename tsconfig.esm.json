{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compileOnSave": true,

  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2018",
    "lib": ["ES2020"],

    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,

    "allowSyntheticDefaultImports": true
  }
}
