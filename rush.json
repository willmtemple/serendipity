{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
  "rushVersion": "5.14.0",
  "pnpmVersion": "3.8.1",
  "pnpmOptions": {
    "strictPeerDependencies": true,
    "resolutionStrategy": "fast"
  },

  "nodeSupportedVersionRange": ">=10.0.0",
  "suppressNodeLtsWarning": false,

  "ensureConsistentVersions": true,

  "projectFolderMinDepth": 1,
  "projectFolderMaxDepth": 2,

  "gitPolicy": {
    "versionBumpCommitMessage": "rush: applying package updates [no-ci]"
  },

  "repository": {
    "url": "https://github.com/willmtemple/serendipity"
  },

  "eventHooks": {
    "preRushInstall": [],
    "postRushInstall": [],
    "preRushBuild": [],
    "postRushBuild": []
  },

  "variants": [],

  "telemetryEnabled": false,

  "hotfixChangeEnabled": false,

  "projects": [
    {
      "packageName": "@serendipity/slipr",
      "projectFolder": "cli/slipr",
      "reviewCategory": "production",
      "shouldPublish": false
    },
    {
      "packageName": "@serendipity/compiler-desugar",
      "projectFolder": "compiler/desugar",
      "reviewCategory": "production",
      "shouldPublish": false
    },
    {
      "packageName": "@serendipity/editor-app",
      "projectFolder": "editor/app",
      "reviewCategory": "production",
      "shouldPublish": false
    },
    {
      "packageName": "@serendipity/camino",
      "projectFolder": "editor/camino",
      "reviewCategory": "production",
      "shouldPublish": false
    },
    {
      "packageName": "@serendipity/interpreter",
      "projectFolder": "runtime/interpreter",
      "reviewCategory": "production",
      "shouldPublish": false
    },
    {
      "packageName": "@serendipity/syntax",
      "projectFolder": "syntax/syntax",
      "reviewCategory": "production",
      "shouldPublish": false
    },
    {
      "packageName": "@serendipity/syntax-abstract",
      "projectFolder": "syntax/abstract",
      "reviewCategory": "production",
      "shouldPublish": false
    },
    {
      "packageName": "@serendipity/syntax-surface",
      "projectFolder": "syntax/surface",
      "reviewCategory": "production",
      "shouldPublish": false
    },
    {
      "packageName": "@serendipity/eslint-config",
      "projectFolder": "tools/eslint-config",
      "reviewCategory": "tools",
      "shouldPublish": false
    },
    {
      "packageName": "@serendipity/scripts",
      "projectFolder": "tools/scripts",
      "reviewCategory": "tools",
      "shouldPublish": false
    }
  ]
}
